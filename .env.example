# Configuración de la aplicación
NODE_ENV=development
PORT=8000
HOST=0.0.0.0
API_PREFIX=api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_MAX=100

# Configuración de seguridad
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1d
BCRYPT_SALT_ROUNDS=10

# Configuración de base de datos
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=tabanok
DB_SSL=false
DB_MAX_CONNECTIONS=100
# DB_SLAVES=[{"host":"slave1","port":5432,"username":"postgres","password":"postgres","database":"tabanok"}]

# Configuración de Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CACHE_TTL=60

# Configuración de logging
LOG_LEVEL=info
LOG_FORMAT=json

# Configuración de email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASSWORD=your-password
EMAIL_FROM=no-reply@tabanok.com

# Configuración de almacenamiento
STORAGE_PROVIDER=local
STORAGE_BUCKET=uploads
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key

# Configuración de servicios externos
TRANSLATION_API_URL=https://api.translation.com
TRANSLATION_API_KEY=your-api-key
ANALYTICS_API_URL=https://api.analytics.com
ANALYTICS_API_KEY=your-api-key 